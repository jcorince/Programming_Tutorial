import java.util.*;

//beginner

public class Addition {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Please enter an integer");
		int num1 = scan.nextInt();
		int sum;
		String intent;
		
		int num2;
		
		
		do
		{
			
			System.out.println("Please enter another integer");
			num2 = (scan.nextInt());
			sum = num1+ num2;
			System.out.println("Enter y to continue or s to display the sum of all previously entered numbers and exit the program.");
			do
			{
				while(scan.hasNext())
				{
					scan.next();
					System.out.println("You must enter either y or s only.");
				}//end while loop
				intent = scan.nextLine();
			}while ((intent!="s")||(intent!="y"));//end do while
			
			if((intent!="s")||(intent!="y"))
			{
				System.out.println("The result is "+ sum);
			}//end if
		}while (num2<0);//end do while
		
		
		
		
		
		//todo: Read integer values as input and add them until the user writes a 's'.
		//Print the result.
		
	}//end main method
	
}//end addition class